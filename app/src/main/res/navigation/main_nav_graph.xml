<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/authMethodFragment">

    <fragment
        android:id="@+id/authMethodFragment"
        android:name="com.authguardian.mobileapp.fragments.AuthMethodFragment"
        android:label="fragment_auth_method"
        tools:layout="@layout/fragment_auth_method">
        <action
            android:id="@+id/action_authMethodFragment_to_networkServiceDiscoverFragment"
            app:destination="@id/networkServiceDiscoverFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/networkServiceDiscoverFragment"
        android:name="com.authguardian.mobileapp.fragments.NetworkServiceDiscoverFragment"
        android:label="fragment_network_service_discover"
        tools:layout="@layout/fragment_network_service_discover_fragment">
        <action
            android:id="@+id/action_authenticationFragment_to_authorizationFragment"
            app:destination="@id/authorizationFragment" />
    </fragment>

    <fragment
        android:id="@+id/authorizationFragment"
        android:name="com.authguardian.mobileapp.fragments.AuthorizationFragment"
        android:label="fragment_authorization"
        tools:layout="@layout/fragment_authorization" />
</navigation>